<div class="container mt-5">
  <div class="row justify-content-end">
    <%= link_to 'Back', smoothies_path, class: "btn btn-light btn-rounded" %>
    <%= link_to 'Add new ingredient', new_ingredient_path, class: "btn btn-info btn-rounded" %>
  </div>
  <div class="row mt-3">
    <% if @ingredients.empty? %>
      <div class="row justify-content-center">
          <h5>There is no ingredients yet.</h5>
      </div>
      <div class="row justify-content-center">
          <%= link_to 'Add the first ingredient!', new_ingredient_path, class: "btn btn-info btn-rounded" %>
      </div>
      <% else %>
      <div class="cards">
        <% @ingredients.each do |ingredient| %>
            <div class="card-trip">
              <img src="<%= ingredient.img_url %>">
            <div class="card-trip-infos">
              <div>
                <h2><%= ingredient.name %></h2>
              </div>
              <%= link_to 'ğŸ—‘', ingredient_path(ingredient), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
