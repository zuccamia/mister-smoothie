<div class="banner">
  <div class="container col-lg-6">
    <h1>Share and discover the best smoothies!</h1>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group mt-3">
      <%# <%= f.input :name, input_html: {value: ""}, class: "form-control string required" %>
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-info btn-rounded">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
    <% end %>
  </div>
</div>
<div class="container mt-5">
  <% if @smoothies.empty? %>
    <div class="row justify-content-center">
        <h5>There is no smoothies yet.</h5>
    </div>
    <div class="row justify-content-center">
        <%= link_to 'Add the first smoothie!', new_smoothie_path, class: "btn btn-info btn-rounded" %>
    </div>
    <% else %>
    <div class="cards">
      <% @smoothies.each do |smoothie| %>
        <%= link_to smoothie_path(smoothie) do %>
          <div class="card-trip">
          <% if smoothie.img_url.nil? %>
            <%= image_tag 'smoothie_default_img.svg', id: "default-img" %>
          <% else %>
            <img src="<%= smoothie.img_url %>">
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= smoothie.name %></h2>
            </div>
          </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>





